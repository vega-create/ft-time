---
import BaseLayout from '../layouts/BaseLayout.astro';
import SEO from '../components/SEO.astro';
import WebSiteSchema from '../components/WebSiteSchema.astro';
import AdSense from '../components/AdSense.astro';
import { categories, getToolsByCategory } from '../data/tools';
---
<BaseLayout>
  <SEO slot="head" title="Free Time Tools & Calculators" description="Free time tools: world clock, timezone converter, countdown timer, stopwatch, age calculator, and more." />
  <WebSiteSchema slot="head" />
  <section class="bg-gradient-to-br from-blue-900 via-blue-800 to-indigo-900 text-white">
    <div class="max-w-6xl mx-auto px-4 py-16 md:py-24 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-4 tracking-tight">üïê Time <span class="text-cyan-300">Tools</span></h1>
      <p class="text-lg md:text-xl text-white/80 max-w-2xl mx-auto mb-8">World clocks, timers, date calculators, and time conversions. All free, all in your browser.</p>
      <div class="flex flex-wrap justify-center gap-3">
        {categories.map(cat => (
          <a href={`#${cat.id}`} class="px-4 py-2 bg-white/15 hover:bg-white/25 rounded-xl text-sm font-medium border border-white/20">{cat.icon} {cat.name}</a>
        ))}
      </div>
    </div>
  </section>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <AdSense slot="top" />
    {categories.map(cat => {
      const catTools = getToolsByCategory(cat.id);
      return (
        <section id={cat.id} class="mb-16">
          <div class="flex items-center gap-3 mb-6"><span class="text-3xl">{cat.icon}</span><h2 class="text-2xl font-bold text-gray-900">{cat.name}</h2><span class="text-sm text-gray-400">{catTools.length} tools</span></div>
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {catTools.map(tool => (
              <a href={`/${tool.slug}/`} class="group bg-white rounded-2xl shadow-sm border border-gray-100 p-6 hover:shadow-md hover:border-blue-200 transition-all">
                <div class="flex items-start gap-4">
                  <div class="w-12 h-12 bg-blue-50 rounded-xl flex items-center justify-center text-xl flex-shrink-0 group-hover:bg-blue-100">{tool.icon}</div>
                  <div><h3 class="font-semibold text-gray-900 group-hover:text-blue-900 mb-1">{tool.name}</h3><p class="text-sm text-gray-500">{tool.description}</p></div>
                </div>
              </a>
            ))}
          </div>
        </section>
      );
    })}
    <AdSense slot="bottom" />
  </div>
</BaseLayout>
