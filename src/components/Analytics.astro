---
import { siteConfig } from '../site.config';

const gtmId = siteConfig.tracking?.gtm;
const ga4Id = siteConfig.analytics?.ga4;
const adsenseClient = siteConfig.adsense?.client;
const adsenseEnabled = siteConfig.adsense?.enabled;
const googleVerification = siteConfig.verification?.google;
---

{googleVerification && (
  <meta name="google-site-verification" content={googleVerification} />
)}

{gtmId && (
  <script is:inline define:vars={{ gtmId }}>
    (function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer',gtmId);
  </script>
)}

{ga4Id && !gtmId && (
  <Fragment>
    <script async src={`https://www.googletagmanager.com/gtag/js?id=${ga4Id}`}></script>
    <script is:inline define:vars={{ ga4Id }}>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', ga4Id);
    </script>
  </Fragment>
)}

{adsenseEnabled && adsenseClient && (
  <script
    is:inline
    async
    src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClient}`}
    crossorigin="anonymous"
  ></script>
)}
