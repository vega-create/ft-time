---
import { siteConfig } from '../site.config';
interface Props { slot?: string; }
const { slot: adSlot = 'auto' } = Astro.props;
const client = siteConfig.adsense?.client;
const enabled = siteConfig.adsense?.enabled;
---
{enabled && client && (
  <div class={`adsense-slot adsense-${adSlot} my-6 text-center`}>
    <ins class="adsbygoogle" style="display:block"
      data-ad-client={client} data-ad-slot="auto"
      data-ad-format="auto" data-full-width-responsive="true"></ins>
    <script is:inline>
      (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </div>
)}
